<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="duviwin.compudocapp.OpdrachtDetails.ShowDetailsActivityFragment"
    tools:showIn="@layout/activity_show_details"
    android:textIsSelectable="true"
    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

   <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="1dp"
       android:weightSum="1"
       >

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:id="@+id/det_gepost"
           />

       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:weightSum="1"
           >

           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               
               android:id="@+id/det_OS"
               android:layout_weight="0.5" />

           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               
               android:id="@+id/det_cat"
               android:layout_weight="0.5" />
       </LinearLayout>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           
           android:id="@+id/det_omschrijving"
           android:focusable="true"
           android:focusableInTouchMode="true"
           />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           
           android:id="@+id/det_afspraaktijd"
           />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           
           android:id="@+id/det_internet"
           />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           
           android:id="@+id/det_voorkeur"
           />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           
           android:id="@+id/det_owner"
           />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="openMaps"
            >
       <TextView
           android:id="@+id/det_straat"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:id="@+id/det_postcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" " />

                <TextView
                    android:id="@+id/det_stad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

       <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Klantnr. " />
       <TextView
           android:id="@+id/det_klantnr"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           />
    </LinearLayout>

       <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fb_score" />
       <TextView
           android:id="@+id/det_feedbackscore"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
            />
        </LinearLayout>
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/det_huidig_bod" />
           <TextView
               android:id="@+id/det_huidig_bod"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               />
       </LinearLayout>
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/det_opdr_stand" />
           <TextView
               android:id="@+id/det_opdr_stand"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               />
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:orientation="horizontal"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/min_bod"

               />

           <EditText
               android:id="@+id/min_bod"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_centerVertical="true"
               android:ems="10"
               android:inputType="number" />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:orientation="horizontal"
           android:weightSum="1">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/max_bod" />

           <EditText
               android:id="@+id/max_bod"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_centerVertical="true"
               android:ems="10"
               android:inputType="number" />
       </LinearLayout>

       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/stuur_bod"
           android:onClick="bieden"
           android:id="@+id/bied_knop"
           />
       <TextView
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:id="@+id/det_bod_result"
           />


   </LinearLayout>
</ScrollView>


</RelativeLayout>
